html
	head
		title= title
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
		link(rel='stylesheet', href='assets/css/main.css')
		//if lte IE 9
			link(rel='stylesheet', href='assets/css/ie9.css')
		noscript
			link(rel='stylesheet', href='assets/css/noscript.css')
	body
		// Wrapper
		#wrapper
			// Header
			header#header
				.logo
					//-span.icon.fa-diamond
				.content
					.inner
				    script(src='../dist/igv.js')
				    
				    h1 Alignments from a htsget server (DNAnexus)
						#myDiv(style='padding-top: 50px;padding-bottom: 20px; height: auto')
										
				    script(type='text/javascript').
										
				      document.addEventListener("DOMContentLoaded", function () {
						
						  var div = document.getElementById("myDiv");
						
						  var options = {
							  genome: "hg19",
							  locus: "chr8:128,747,267-128,754,546",
							  tracks: [
							  {
							    type: 'alignment',
							    sourceType: 'htsget',
							    endpoint: 'https://htsnexus.rnd.dnanex.us/v1',
							    id: 'BroadHiSeqX_b37/NA12878',
							    name: 'NA12878'
							  }]
						  };
						
						  igv.createBrowser(div, options)
						  .then(function (browser) {
							  console.log("Created IGV browser");
							  })
						  })
		// BG
		#bg
		// Scripts
		script(src='assets/js/jquery.min.js')
