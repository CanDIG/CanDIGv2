doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='shortcut icon', href='https://igv.org/web/img/favicon.ico')
    title igv.js
    // IGV JS
    script(src="https://igv.org/web/release/2.0.1/dist/igv.min.js")
  body
    h1 Alignments from a htsget server (DNAnexus)
    #myDiv(style='padding-top: 50px;padding-bottom: 20px; height: auto')
    script(type='text/javascript').
      document.addEventListener("DOMContentLoaded", function () {
      var div = document.getElementById("myDiv");
      var options = {
      genome: "hg19",
      locus: "chr8:128,747,267-128,754,546",
      tracks: [
      {
      type: 'alignment',
      sourceType: 'htsget',
      endpoint: 'https://htsnexus.rnd.dnanex.us/v1',
      id: 'BroadHiSeqX_b37/NA12878',
      name: 'NA12878'
      }
      ]
      };
      igv.createBrowser(div, options)
      .then(function (browser) {
      console.log("Created IGV browser");
      })
      })

